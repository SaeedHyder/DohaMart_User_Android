<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginEnd="@dimen/x20"
              android:layout_marginStart="@dimen/x20"
              android:gravity="center"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <com.ingic.ezhalbatek.ui.views.AnyTextView
                    android:id="@+id/title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/forgot_password_title"
                    android:layout_marginStart="@dimen/x15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_bold"/>

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/cross"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/lineView"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/app_font_gray"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:src="@drawable/logo_round"/>

            <com.ingic.ezhalbatek.ui.views.AnyTextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center"
                android:text="@string/cancel_message"
                android:textColor="@color/app_font_gray"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal_dark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_ok"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_red"
                        android:text="@string/yes"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cancel_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"

                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_gray"
                        android:text="@string/no"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>