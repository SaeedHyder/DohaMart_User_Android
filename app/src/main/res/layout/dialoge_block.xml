<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/x20"
    android:layout_marginStart="@dimen/x20"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <com.ingic.ezhalbatek.ui.views.AnyTextView
                    android:id="@+id/title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/admin"
                    android:layout_marginStart="@dimen/x15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x16"
                    app:typeface="@string/font_bold"/>

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/x10"
                    android:visibility="visible"
                    android:src="@drawable/cross"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/lineView"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/app_font_gray"/>

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:src="@drawable/logo_round"/>
            <com.ingic.ezhalbatek.ui.views.AnyEditTextView
                android:id="@+id/edtBody"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_gravity="start"
                android:background="@drawable/button_stroke_grey"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:visibility="gone"
                android:maxLength="36"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/x15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:hint="Bedroom"
                android:textColor="@color/app_font_gray"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal_dark"/>
            <com.ingic.ezhalbatek.ui.views.AnyTextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center"
                android:text="@string/blocked_by_admin"
                android:textColor="@color/app_font_gray"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal_dark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_signup"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_red"
                        android:text="@string/ok"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_logout"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_red"
                        android:text="@string/logout"
                        android:textAllCaps="false"
                        android:textColor="@color/white"/>
                </FrameLayout>




            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>