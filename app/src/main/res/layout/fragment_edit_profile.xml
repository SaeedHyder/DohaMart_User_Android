<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/x20">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        app:cardBackgroundColor="@color/camera_color"
        app:cardCornerRadius="@dimen/x10"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="true"
        >

        <ImageView
            android:id="@+id/btnImagePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/camera"
            />

        <ImageView
            android:id="@+id/btnProfielImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/username"/>

        <com.ingic.ezhalbatek.ui.views.AnyEditTextView
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:background="@null"
            android:hint="@string/full_name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/app_font_gray"
            android:textColorHint="@color/app_font_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/email"/>

        <com.ingic.ezhalbatek.ui.views.AnyEditTextView
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:background="@null"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/app_font_gray"
            android:textColorHint="@color/app_font_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/phone"/>

        <com.ingic.ezhalbatek.ui.views.AnyEditTextView
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:background="@null"
            android:hint="@string/phone"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/app_font_gray"
            android:textColorHint="@color/app_font_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/address"/>

        <com.ingic.ezhalbatek.ui.views.AnyEditTextView
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:background="@null"
            android:hint="@string/city"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/app_font_gray"
            android:textColorHint="@color/app_font_gray"
            android:textSize="@dimen/x14"
            app:hint_text="@string/city"
            app:typeface="@string/font_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/zipcode"/>

        <com.ingic.ezhalbatek.ui.views.AnyEditTextView
            android:id="@+id/edtZipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:background="@null"
            android:hint="@string/zipcode"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="7"
            android:maxLines="1"
            android:textColor="@color/app_font_gray"
            android:textColorHint="@color/app_font_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/button_red"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

</LinearLayout>