<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/x10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20"
        android:src="@drawable/image_placeholder"/>

    <com.ingic.ezhalbatek.ui.views.AnyTextView
        android:id="@+id/txtTechnicainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:paddingEnd="@dimen/x5"
        android:paddingStart="@dimen/x10"
        android:text="James Smith"
        android:textColor="@color/app_red"
        android:textSize="@dimen/x16"
        app:typeface="@string/font_normal_dark"/>

    <com.ingic.ezhalbatek.ui.views.AnyTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/x15"
        android:gravity="center"
        android:paddingEnd="@dimen/x5"
        android:paddingStart="@dimen/x10"
        android:text="@string/rate_technicain"
        android:textColor="@color/app_red"
        android:textSize="@dimen/x16"
        app:typeface="@string/font_normal_dark"/>

    <com.ingic.ezhalbatek.ui.views.CustomRatingBar
        android:id="@+id/rbRating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:textSize="@dimen/x15"
        android:textStyle="bold"
        app:starPadding="@dimen/x15"
        app:stars="1"
        app:typeface="Roboto-Regular.ttf"/>



    <com.ingic.ezhalbatek.ui.views.AnyEditTextView
        android:id="@+id/edtFeedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_stroke_grey"
        android:gravity="top"
        android:hint="@string/write_feedback_here"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:overScrollMode="always"
        android:padding="@dimen/x10"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/app_font_black"
        android:textColorHint="@color/app_font_gray"
        android:textSize="@dimen/x15"
        app:typeface="@string/font_normal_dark" />


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="@dimen/x15"
        android:background="@drawable/button_red"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

</LinearLayout>