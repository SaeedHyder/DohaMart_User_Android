<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        app:cardBackgroundColor="@color/app_gray_brown"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgItemImage"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x20"
                android:src="@drawable/gypsum"/>

            <com.ingic.ezhalbatek.ui.views.AnyTextView
                android:id="@+id/txtItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgItemImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x5"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:text="Celiling Gypsum"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>